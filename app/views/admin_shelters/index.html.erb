<h2>Shelters list</h3>

<div class="shelters-list">
  <% @shelters.each do |shelter| %>
    <div class="shelters-line-item">
      <h3><%= shelter.name %></h3>
      <p><%= shelter.city %></p>
      <p>Foster program: <%= shelter.foster_program %></p>
      <p>Rank: <%= shelter.rank %></p>
    </div>
  <% end %>
</div>

<div class="pending-applications">
  <h2>Shelters with pending applications</h2>
  <% @shelters_with_pending.each do |shelter| %>
    <div class="pending-shelter"><%= shelter.name %></div>
  <% end %>
</div>
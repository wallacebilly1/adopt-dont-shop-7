<h1>Apply for Adoption</h1>

<%= form_with url: '/adoption_applications', method: :post, local: true do |form| %>
  <%= form.label "Name:" %>
  <%= form.text_field :name %></br>
  <%= form.label "Street Address:" %>
  <%= form.text_field :street_address %></br>
  <%= form.label "City:" %>
  <%= form.text_field :city %></br>
  <%= form.label "State:" %>
  <%= form.text_field :state %></br>
  <%= form.label "Zip Code:" %>
  <%= form.number_field :zip_code %></br>
  <%= form.label "Please state why you would be a good dog owner:" %>
  <%= form.text_area :description %></br>
  <%= form.hidden_field :status, value: "In Progress" %>
  <%= form.submit "Submit Application" %>
<% end %>
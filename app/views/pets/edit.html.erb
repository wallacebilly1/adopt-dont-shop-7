<h1 class="page-title">Edit <%= @pet.name %></h1>
<%= form_with url: "/pets/#{@pet.id}", method: :patch, local: true, data: {turbo: false}, class: "edit-pet" do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :breed %>
  <%= f.text_field :breed %>

  <%= f.label :adoptable %>
  <%= f.check_box :adoptable %>

  <%= f.label :age %>
  <%= f.number_field :age %>

  <%= f.submit %>
<% end %>

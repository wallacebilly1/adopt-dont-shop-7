<div class="list-item">
  <h3><%= @pet.name %></h3>
  <p>Age: <%= @pet.age %> years old</p>
  <p>Breed: <%= @pet.breed %></p>
  <p>Adoptable: <%= @pet.adoptable %></p>
  <p>Location: <%= @pet.shelter_name %></p>
  <div class="two-buttons">
    <%= link_to "Update #{@pet.name}", "pets/#{@pet.id}/edit", class: "edit" %>
    <%= link_to "Delete #{@pet.name}", "/pets/#{@pet.id}", method: :delete, class: "delete" %>
  </div>
</div>
